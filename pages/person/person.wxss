/* pages/company/company.wxss */

page {
  background-color: #edf0f5;
  width: 100%;
  height: 100%;
}

.header {
  background: #edf0f5;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.search {
  width: 92%;
  height: 60rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
}

.search label {
  height: 100%;
  display: flex;
  margin: 0 auto;
  flex-direction: row;
  align-items: center;
}

label image {
  width: 25rpx;
  height: 25rpx;
}

label text {
  line-height: 100%;
  font-size: 26rpx;
  margin-left: 10rpx;
  font-family: PingFang-SC-Regular;
  color: rgba(179, 179, 179, 1);
}

.item {
  height: 120rpx;
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
}

.content {
  background-color: #fff;
}

.icon {
  height: 75rpx;
  width: 75rpx;
  line-height: 75rpx;
  font-size: 45rpx;
  border-radius: 50%;
  display: block;
  position: absolute;
  color: white;
  background-image: "../../image/ic_user_header.png";
  text-align: center;
  box-shadow: 1px 1px 0.5px #888;
  overflow: hidden;
}

.item_content {
  width: 100%;
  margin-left: 12%;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #ededed;
}

.title {
  height: 75rpx;
  font-size: 34rpx;
  line-height: 75rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(51, 51, 51, 1);
  flex-grow: 2;
}
